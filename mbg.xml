<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

	<context id="DB2Tables" targetRuntime="MyBatis3">

		<!-- Make the reverse generated file have no comments -->
		<commentGenerator>
			<property name="suppressAllComments" value="true" />
		</commentGenerator>

		<!-- Configuring database connections -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/social_network?useUnicode=true&amp;
			characterEncoding=UTF-8&amp;useFastDateParsing=false&amp;
			characterEncoding=UTF-8&amp;useFastDateParsing=false"
			userId="root"
			password="tyler0131">
		</jdbcConnection>

		<!-- Java type parsing -->
		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- Specify the location where the javabean is generated -->
		<javaModelGenerator targetPackage="com.teamnine.bean"
			targetProject=".\src\main\java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!-- Specify where the mapper file is generated -->
		<sqlMapGenerator targetPackage="mapper" targetProject=".\src\main\resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<!-- Specify the location generated by the dao interface, mapper interface -->
		<javaClientGenerator type="XMLMAPPER"
							 targetPackage="com.teamnine.dao" targetProject=".\src\main\java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>

		<!-- Table specifies the generation strategy for each table -->
		<table tableName="user" domainObjectName="User"></table>
		<table tableName="admin" domainObjectName="Admin"></table>
		<table tableName="article" domainObjectName="Article"></table>
		<table tableName="comment" domainObjectName="Comment"></table>
		<table tableName="forum" domainObjectName="Forum"></table>
		<table tableName="avatar" domainObjectName="Avatar"></table>
		<table tableName="ranking" domainObjectName="Ranking"></table>

	</context>
</generatorConfiguration>